<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pw.Bingo.Start1"
    android:background="#c97979">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game id"
        android:textColor="#fffdfe"
        android:textStyle="bold"
        android:textSize="50dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fffdfe"
        android:textSize="30dp"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:hint="waiting for players..."
        android:typeface="serif"
        android:textStyle="bold"
        android:background="#53cce7c7" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fffdfe"
        android:textSize="30dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"
        android:hint="waiting for players..."
        android:typeface="serif"
        android:textStyle="bold"
        android:background="#53cce7c7" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fffdfe"
        android:textSize="30dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="340dp"
        android:hint="waiting for players..."
        android:typeface="serif"
        android:textStyle="bold"
        android:background="#53cce7c7" />
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="startGame"
        android:textSize="35dp"
        android:background="@drawable/roundbutton"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/startGame" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/labelForId"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="#4dd0e1"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="35dp"
        android:textIsSelectable="true" />


</RelativeLayout>
