<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pw.Bingo.Play"
  >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search Game id"
        android:textColor="#fffdfe"
        android:textStyle="bold"
        android:textSize="45dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/idText"
        android:background="@color/secondary_text_disabled_material_light"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Join Arena"
        android:textSize="35dp"
        android:background="@drawable/roundbutton"
        android:id="@+id/joinArena"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Create new arena"
        android:textSize="35dp"
        android:background="@drawable/roundbutton"
        android:id="@+id/newArena"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/joinArena"
        android:layout_alignStart="@+id/joinArena"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="--OR--"
        android:id="@+id/textView4"
        android:layout_above="@+id/joinArena"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
